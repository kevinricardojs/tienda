

<%= form_for(@producto) do |f| %>
<% if @producto.errors.any? %>
<div id="error_explanation">
  <h5><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h5>

  
    <% @producto.errors.full_messages.each do |message| %>
    <p><%= message %></p>
    <% end %>

</div>
